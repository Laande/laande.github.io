---
import { Icon } from 'astro-icon/components';

interface Button {
  text: string;
  url: string;
  icon?: string;
  variant: 'primary' | 'secondary' | 'outline';
}

interface Props {
  title: string;
  description: string;
  buttons?: Button[];
}

const { title, description, buttons } = Astro.props;
---

<div class="card">
  <div>
    <h2>{title}</h2>
    <p>{description}</p>
  </div>
  {buttons && <div class="buttons">
    {buttons.map((button) => {
      const iconName = button.icon && button.icon.includes(':') ? button.icon : `simple-icons:${button.icon}`;
      return (
        <a
          href={button.url}
          target="_blank"
          class:list={[ button.variant || 'primary' ]}
        >
          {button.icon && <Icon name={iconName} size={20} />}
          {button.text}
        </a>
      );
    })}
  </div>}
</div>

<style>
  .card {
    background: #1e293b;
    padding: 1.5rem;
    border-radius: 1rem;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.25);
  }
  .card h2 {
    margin: 0 0 0.5rem;
    font-size: 1.1rem;
  }
  .card p {
    color: #cbd5e1;
    font-size: 0.9rem;
    line-height: 1.4;
    margin-bottom: 1rem;
  }
  .buttons {
    display: flex;
    gap: 0.5rem;
  }
  .buttons a {
    text-decoration: none;
    font-size: 0.85rem;
    padding: 0.4rem 0.8rem;
    border-radius: 0.5rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  .primary {
    background: #970076;
    color: white;
  }
  .secondary {
    background: #5558fcc9;
    color: white;
  }
  .outline {
    background: #0f172a;
    color: white;
    border: 1px solid #1e293b;
  }
</style>