---
import { icons } from "../icons";

interface Button {
  text: string;
  url: string;
  icon?: string;
  variant: "primary" | "secondary" | "outline";
}

interface Props {
  title: string;
  description: string;
  buttons?: Button[];
}

const { title, description, buttons } = Astro.props;
---

<div class="card">
  <div>
    <h2>{title}</h2>
    <p>{description}</p>
  </div>
  {
    buttons && (
      <div class="buttons">
        {buttons.map((button) => (
          <a
            href={button.url}
            target="_blank"
            class:list={[button.variant || "primary"]}
          >
            {button.icon && icons[button.icon] && (
              <span class="icon" set:html={icons[button.icon]} />
            )}
            {button.text}
          </a>
        ))}
      </div>
    )
  }
</div>

<style>
  .card {
    background: var(--color-card-bg);
    padding: 1.5rem;
    border-radius: 1rem;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    box-shadow: var(--shadow-sm);
    border: 1px solid var(--color-card-border);
  }
  .card h2 {
    margin: 0 0 0.5rem;
    font-size: 1.1rem;
    color: var(--color-text);
  }
  .card p {
    color: var(--color-text-muted);
    font-size: 0.9rem;
    line-height: 1.4;
    margin-bottom: 1rem;
  }
  .buttons {
    display: flex;
    gap: 0.5rem;
  }
  .buttons a {
    text-decoration: none;
    font-size: 0.85rem;
    padding: 0.4rem 0.8rem;
    border-radius: 0.5rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    transition: transform 0.2s ease, opacity 0.2s ease;
  }
  .buttons a:hover {
    transform: translateY(-1px);
  }
  .icon {
    display: flex;
    align-items: center;
  }
  .primary {
    background: var(--color-primary);
    color: #0a0a0a;
    font-weight: 500;
  }
  .primary:hover {
    opacity: 0.8;
  }
  .secondary {
    background: var(--color-secondary);
    color: white;
  }
  .secondary:hover {
    opacity: 0.85;
  }
  .outline {
    background: transparent;
    color: white;
    border: 1px solid var(--color-card-border);
  }
  .outline:hover {
    border-color: var(--color-outline);
  }
</style>